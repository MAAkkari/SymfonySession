{% extends 'base.html.twig' %}

{% block title %}Liste des Stagiaires{% endblock %}

{% block body %}

<h1>Liste des Stagiaires </h1>

<table>
    <thead>
        <tr>
            <th>nom</th>
            <th>prenom</th> 
            <th>ville</th>
            <th>telephone</th>
            <th>Nb Session Prévues</th>
            <th>Détails</th>
        </tr>
    </thead>
    <tbody>
        
        {% for stagiaire in stagiaires %}

        <tr>
            <td> {{stagiaire.nom}} </td>
            <td> {{stagiaire.prenom}} </td>     
            <td> {{stagiaire.ville}} </td>
            <td> {{stagiaire.telephone}} </td>
            <td>{{stagiaire.sessions | length}}</td>
            <td><a href="{{path('show_stagiaire',{'id':stagiaire.id})}}"><i class="fa-solid fa-circle-info"></i></a></td>
        </tr>

        {% endfor %}

    <tbody>
</table>
    

{% endblock %}
