{% extends 'base.html.twig' %}

{% block title %}Liste des Stagiaires{% endblock %}

{% block body %}

<h1 class="subtitle">Liste des Stagiaires </h1>


<div class="table_btn_wrapper">
<table  class="styled-table ">
    <thead>
        <tr>
            <th>Prenom Nom </th>
            <th>Ville</th>
            <th>Telephone</th>
            <th>Inscrit</th>
            <th>Action</th>
            
        </tr>
    </thead>
    <tbody>
        
        {% for stagiaire in stagiaires %}

        <tr>
            <td  class="intitule"> <a  href="{{path('show_stagiaire',{'id':stagiaire.id})}}">{{stagiaire.nom}} {{stagiaire.prenom}}</a></td>
             
            <td> {{stagiaire.ville}} </td>
            <td> {{stagiaire.telephone}} </td>
            <td>{{stagiaire.sessions | length}}</td>
            <td><a style="color:orange" href="{{path('edit_stagiaire',{'id':stagiaire.id}) }}"><i class="fa-solid fa-pen-to-square"></i></a>
                <a style="color:red" href="{{path('delete_stagiaire',{'id':stagiaire.id}) }}"><i class="fa-solid fa-x"></i></a></td>
            
        </tr>

        {% endfor %}

    <tbody>
</table>
    <br>
    <a  class="addBtn" href="{{ path('new_stagiaire') }}">Ajouter</a>
</div>

{% endblock %}
