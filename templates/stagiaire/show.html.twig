{% extends 'base.html.twig' %}

{% block title %} {{stagiaire.prenom}} {{ stagiaire.nom }} {% endblock %}


{% block body %}

<h1><i class="fa-regular fa-user"></i> Fiche Stagiaire</h1>
<h2>{{stagiaire.prenom}} {{ stagiaire.nom }}</h2>
<p> Sexe : {{stagiaire.sexe}}</p> 
<p>Date de naissance : {{stagiaire.naissance|date('d-m-Y')}}</p> 
<p>Ville: : {{stagiaire.ville}}</p> 
<p>Courriel : {{stagiaire.mail}}</p> 
<p>Télephone : {{stagiaire.telephone}}</p> 

<h2>Sessions Prévues</h2>

{% for session in stagiaire.sessions %}
    <p><a href="{{path('show_session',{'id':session.id})}}">{{session.Intitule}}</a> ( du {{session.debut|date('d-m-Y')}} au {{session.fin|date('d-m-Y')}} ) </p>
{% endfor %}




{% endblock %}
