{% extends 'base.html.twig' %}

{% block title %}Liste des sessions{% endblock %}

{% block body %}

<h1 class="subtitle">Liste des Sessions</h1>
<div class="table_btn_wrapper">
    <table class="styled-table">
        <thead>
            <tr>
                <th>Intitulé Session</th>
                <th>Date de début</th>
                <th>Date de fin</th>
                <th>Inscrits</th>
                <th>Actions</th>
            
            </tr>
        </thead>
        <tbody>
            {% for session in sessions %}
            <tr>
                <td class="intitule"><a title="info de la session" href=" {{path('show_session',{'id':session.id}) }} ">{{session.Intitule}} </a></td>
                <td>{{session.debut|date('d-m-Y')}}</td>
                <td>{{session.fin|date('d-m-Y')}}</td>
                <td>{{session.stagiaires | length}} / {{session.places}}</td>
                
            
                <td><a title="modifier la session" style="color:orange" href="{{path('edit_session',{'id':session.id}) }}"><i class="fa-solid fa-pen-to-square"></i></a>
                <a title="annuler la session" style="color:red" href="{{path('delete_session',{'id':session.id}) }}"><i class="fa-solid fa-x"></i></a></td>
            </tr>
        
            {% endfor %}
        <tbody>
    </table>
    
    <a title="ajouter une session" class="addBtn"  href="{{path('new_session')}}">Ajouter</a>
</div>

{% endblock %}
