{% extends 'base.html.twig' %}

{% block title %}{{materiel.nom}}{% endblock %}


{% block body %}

<h1 class="subtitle">Liste des sessions qui utilise des "{{materiel.nom}}" (Total :{{materiel.qtt}}) </h1>
<table class="styled-table center">
    <thead>
        <tr>
            <th>Intitulé Session</th>
            <th>Date de début</th>
            <th>Date de fin</th>
            <th>Inscrits</th>
            <th>Actions</th>
        
        </tr>
    </thead>
    <tbody>
        {% for utiliser in materiel.utilisers %}
        <tr>
            <td class="intitule"><a href=" {{path('show_session',{'id':utiliser.session.id}) }} ">{{utiliser.session.Intitule}} </a></td>
            <td>{{utiliser.session.debut|date('d-m-Y')}}</td>
            <td>{{utiliser.session.fin|date('d-m-Y')}}</td>
            <td>{{utiliser.session.stagiaires | length}} / {{utiliser.session.places}}</td>
            
        
            <td><a style="color:orange" href="{{path('edit_session',{'id':utiliser.session.id}) }}"><i class="fa-solid fa-pen-to-square"></i></a>
            <a style="color:red" href="{{path('delete_session',{'id':utiliser.session.id}) }}"><i class="fa-solid fa-x"></i></a></td>
        </tr>
    
        {% endfor %}
    <tbody>
</table>



{% endblock %}