{% extends 'base.html.twig' %}

{% block title %}{{materiel.nom}}{% endblock %}


{% block body %}

<h1>Liste des sessions qui utilise des "{{materiel.nom}}" </h1>
Quantité total de {{materiel.nom}} disponible : {{materiel.qtt}}
<table>
    <thead>
        <tr>
            <th>Intitulé Session</th>
            <th>Date de début</th>
            <th>Date de fin</th>
            <th>qtt de {{materiel.nom}}</th>
            <th>Détails programme</th>
            <th>modifier</th>
            <th>Supprimer</th>
        </tr>
    </thead>
    <tbody>
        {% for utiliser in materiel.utilisers %}

        <tr>
            <td>{{utiliser.session.Intitule}} </td>
            <td>{{utiliser.session.debut|date('d-m-Y')}}</td>
            <td>{{utiliser.session.fin|date('d-m-Y')}}</td>
            <td>{{utiliser.qtt}}</td>
            <td> <a style="color:green" href=" {{path('show_session',{'id':utiliser.session.id}) }} "><i class="fa-solid fa-circle-info"></i></a></td>
            <td> <a style="color:orange" href="{{path('edit_session',{'id':utiliser.session.id}) }}"><i class="fa-solid fa-pen-to-square"></i></a></td>
            <td> <a style="color:red" href="{{path('delete_session',{'id':utiliser.session.id}) }}"><i class="fa-solid fa-x"></i></a></td>
        </tr>
       
        {% endfor %}
    <tbody>
</table>




{% endblock %}